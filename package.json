{
  "name": "website",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint:fix": "xo --fix --quiet .",
    "lint": "xo .",
    "local": "NODE_ENV=${NODE_ENV:-development} nodemon . | bunyan",
    "prelocal": "docker-compose -f ./.local/docker-compose.yml up -d",
    "start": "node .",
    "tdd": "yarn test -wbR min",
    "test": "NODE_ENV=${NODE_ENV:-testing} mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poo-particle/website.git"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/poo-particle/website/issues"
  },
  "homepage": "https://github.com/poo-particle/website#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "xo": {
    "prettier": true,
    "plugins": [
      "unicorn"
    ],
    "overrides": [
      {
        "files": "test/**/*.js",
        "envs": [
          "mocha"
        ]
      }
    ]
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix -- --env mocha",
      "git add"
    ],
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "blipp": "^3.1.2",
    "boom": "^7.3.0",
    "bunyan": "^1.8.12",
    "bunyan-logstash-tcp": "^1.0.0",
    "config": "^3.0.1",
    "good": "^8.1.2",
    "good-console": "^8.0.0",
    "good-logstash": "^3.0.0",
    "good-squeeze": "^5.1.0",
    "hapi": "^18.1.0",
    "hapi-auth-jwt2": "^8.3.0",
    "hapi-router": "^4.0.0",
    "joi": "^14.3.1"
  },
  "devDependencies": {
    "axios": "^0.18.0",
    "chai": "^4.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4",
    "sinon": "^7.2.7",
    "xo": "^0.24.0"
  }
}
